{
    "manifest_version": 3,
    "name": "Salesforce Field Permissions Inspector 2",
    "version": "1.0",
    "description": "Displays field-level security permissions for Salesforce fields",
    "permissions": [
      "activeTab",
      "storage",
      "cookies"
    ],
    "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.salesforce-setup.com/*",
    "https://*.force.com/*",
    "https://*.cloudforce.com/*",
    "https://*.visualforce.com/*",
    "https://*.sfcrmapps.cn/*",
    "https://*.sfcrmproducts.cn/*",
    "https://*.salesforce.mil/*",
    "https://*.force.mil/*",
    "https://*.cloudforce.mil/*",
    "https://*.visualforce.mil/*",
    "https://*.crmforce.mil/*",
    "https://*.force.com.mcas.ms/*",
    "https://*.builder.salesforce-experience.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.lightning.force.com/*"
      ],
      "all_frames": true,
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
    "web_accessible_resources": [
      {
        "resources": ["icons/shield16.png", "icons/shield128.png"],
        "matches": [
            "https://*.salesforce.com/*",
            "https://*.lightning.force.com/*"
          ]
      }
    ],
    "icons": {
      "16": "icons/shield16.png",
      "128": "icons/shield128.png"
    }
  }